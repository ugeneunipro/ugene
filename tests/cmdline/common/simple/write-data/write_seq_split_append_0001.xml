<multi-test>

    <create-temp-file url="write-seq-split-append-0001_split1.fa" data=">old1\nAAAA\n"/>
    <create-temp-file url="write-seq-split-append-0001_split2.fa" data=">old2\nAAAA\n"/>

    <run-cmdline
            task="!common_data_dir!cmdline/read-write/write/seq-seq.uwl"
            in="!common_data_dir!cmdline/read-write/write/seq4.fa"
            out="!tmp_data_dir!write-seq-split-append-0001.fa"
            action="2"
            split="2"
    />

    <load-document index="doc1" url="write-seq-split-append-0001_split1.fa" io="local_file" format="fasta" dir="temp"/>
    <check-num-objects doc="doc1" value="5"/>
    <find-object-by-name index="seq1" doc="doc1" name="seq2" type="OT_SEQUENCE"/>
    <check-sequence-part obj="seq1" value="CCCCCCCCCCCCCCCCCCC" seqstart="0"/>

    <load-document index="doc2" url="write-seq-split-append-0001_split2.fa" io="local_file" format="fasta" dir="temp"/>
    <check-num-objects doc="doc2" value="5"/>
    <find-object-by-name index="seq2" doc="doc2" name="seq2" type="OT_SEQUENCE"/>
    <check-sequence-part obj="seq2" value="AAAAAAAAAAAAAAAAAAA" seqstart="0"/>

    <check-temp-file url="write-seq-split-append-0001_split1_oldcopy1.fa" exists="0"/>
    <check-temp-file url="write-seq-split-append-0001_split2_oldcopy1.fa" exists="0"/>

</multi-test>
